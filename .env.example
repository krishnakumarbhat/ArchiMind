# ArchiMind Environment Configuration
# ====================================

# Required: Flask secret key for sessions/cookies
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace_with_a_long_random_secret

# Database URL
# Default local/dev path (SQLite)
DATABASE_URL=sqlite:///data/archimind_dev.db

# Optional Flask runtime options
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Optional anonymous usage cap
ANONYMOUS_GENERATION_LIMIT=5

# Optional Google OAuth login
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Local HTTP OAuth testing only. Use 0 in production over HTTPS.
OAUTHLIB_INSECURE_TRANSPORT=0
